<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout">

        </include>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#fefefe"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"

                    android:src="@drawable/ic_baseline_shopping"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="E-Nursery"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Version 1.0"
                        android:textColor="#000"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#fefefe"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"

                    android:src="@drawable/ic_info"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="About"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="This app is based on Nursery shop"
                        android:textColor="#000"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#fefefe"
                android:layout_margin="4dp"
                android:id="@+id/phone"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_baseline_phone"
                    android:layout_height="80dp">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Contact"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Contact for any kind of assistance"
                        android:gravity="center"
                        android:id="@+id/dev_call"
                        android:padding="5dp"
                        android:layout_margin="5dp"

                        android:textColor="#000"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:id="@+id/rateid"
                app:cardBackgroundColor="#fefefe"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="18dp"

                    android:src="@drawable/ic_baseline_star_border"
                    android:layout_height="60dp">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Give Rating"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Rate this app on playstore"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"

                app:cardBackgroundColor="#fefefe"
                android:id="@+id/share"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="19dp"

                    android:src="@drawable/ic_baseline_share_24"
                    android:layout_height="50dp">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Share"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Share This app"
                        android:layout_marginTop="10dp"

                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"

                app:cardBackgroundColor="#fefefe"
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="19dp"

                    android:src="@drawable/ic_baseline_email_24"
                    android:layout_height="50dp">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Email"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Email us"
                        android:layout_marginTop="10dp"

                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </ScrollView>

</LinearLayout>
</LinearLayout>